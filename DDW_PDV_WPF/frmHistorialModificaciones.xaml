<Page
    x:Class="DDW_PDV_WPF.frmHistorialModificaciones"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DDW_PDV_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="frmHistorialModificaciones"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Estilos y recursos  -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2E5E4E" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F1E6D3" />
            <Setter Property="BorderBrush" Value="#6B9D89" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F8F8F8" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!--  Valores fijos pero escalables  -->
        <sys:Double x:Key="FontSizeLarge">18</sys:Double>
        <sys:Double x:Key="FontSizeNormal">14</sys:Double>
        <sys:Double x:Key="FontSizeSmall">12</sys:Double>
        <sys:Double x:Key="FontSizeHeader">22</sys:Double>

        <Thickness x:Key="SmallMargin">5</Thickness>
        <Thickness x:Key="StandardMargin">10</Thickness>
        <Thickness x:Key="LargeMargin">15</Thickness>
        <CornerRadius x:Key="StandardCornerRadius">5</CornerRadius>
    </Page.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3.5*" />
        </Grid.ColumnDefinitions>

        <!--  Panel Izquierdo (70%)  -->
        <Grid Grid.Column="0" Margin="{StaticResource StandardMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Título  -->
                <RowDefinition Height="Auto" />
                <!--  Barra de búsqueda  -->
                <RowDefinition Height="*" />
                <!--  DataGrid  -->
                <RowDefinition Height="Auto" />
                <!--  Paginación  -->
            </Grid.RowDefinitions>

            <!--  Título  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontSize="{StaticResource FontSizeLarge}"
                Style="{StaticResource HeaderStyle}"
                Text="HISTORIAL DE MODIFICACIONES A INVENTARIO" />

            <!--  Barra de búsqueda  -->
            <Border
                Grid.Row="1"
                Margin="0,0,0,10"
                Background="White"
                BorderBrush="#6B9D89"
                CornerRadius="{StaticResource StandardCornerRadius}">
                <Grid>
                    <TextBox
                        x:Name="txtBusqueda"
                        Padding="10"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="{StaticResource FontSizeNormal}"
                        Foreground="#2E5E4E"
                        Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />

                    <Button
                        x:Name="btnClearSearch"
                        Width="20"
                        Height="20"
                        Margin="0,0,10,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="✕"
                        FontSize="{StaticResource FontSizeSmall}"
                        Foreground="#A01A7D" />
                </Grid>
            </Border>

            <!--  DataGrid  -->
            <DataGrid
                Grid.Row="2"
                Margin="0"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding ListaHistorial}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionChanged="DataGrid_SelectionChanged"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="1.5*" Header="FECHA Y HORA">
                        <DataGridTextColumn.Binding>
                            <Binding Path="FechaHoraDate" StringFormat="{}{0:yyyy-MM-dd HH:mm:ss}" />
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Usuario}"
                        Header="USUARIO" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding accion}"
                        Header="ACCIÓN">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="Padding" Value="0,0,0,10" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding accion}" Value="CREADO">
                                        <Setter Property="Foreground" Value="#2E5E4E" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding accion}" Value="ACT.">
                                        <Setter Property="Foreground" Value="#6B9D89" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding accion}" Value="ELIM.">
                                        <Setter Property="Foreground" Value="#A01A7D" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="2*" Header="ANTES">
                        <DataGridTextColumn.Binding>
                            <Binding Path="antes">
                                <Binding.Converter>
                                    <local:XmlToSummaryConverter />
                                </Binding.Converter>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="2*" Header="DESPUÉS">
                        <DataGridTextColumn.Binding>
                            <Binding Path="despues">
                                <Binding.Converter>
                                    <local:XmlToSummaryConverter />
                                </Binding.Converter>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!--  StackPanel de paginación  -->
            <StackPanel
                Grid.Row="3"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <!--  Botón Anterior  -->
                <Button
                    Width="120"
                    Height="35"
                    Margin="5"
                    Padding="10,5"
                    Background="#2E5E4E"
                    BorderBrush="#2E5E4E"
                    BorderThickness="1"
                    Click="BtnAnterior_Click"
                    Content="⟨ Anterior"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6" />
                        </Style>
                    </Button.Resources>
                </Button>

                <!--  Etiqueta página actual  -->
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="{Binding PaginaActual, StringFormat='Página {0} de'}" />

                <!--  Etiqueta total páginas  -->
                <TextBlock
                    Margin="2,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="{Binding TotalPaginas}" />

                <!--  Botón Siguiente  -->
                <Button
                    Width="120"
                    Height="35"
                    Margin="5"
                    Padding="10,5"
                    Background="#2E5E4E"
                    BorderBrush="#2E5E4E"
                    BorderThickness="1"
                    Click="BtnSiguiente_Click"
                    Content="Siguiente ⟩"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6" />
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>

        </Grid>


        <!--  Panel Derecho (30%)  -->
        <Grid
            Grid.Column="1"
            Margin="10"
            Background="#8FBBA9">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Encabezado  -->
                <RowDefinition Height="Auto" />
                <!--  Fecha/Hora  -->
                <RowDefinition Height="Auto" />
                <!--  Usuario  -->
                <RowDefinition Height="Auto" />
                <!--  Acción  -->
                <RowDefinition Height="2*" />
                <!--  Imágenes (20%)  -->
                <RowDefinition Height="3*" />
                <!--  Comparación (30%)  -->
                <RowDefinition Height="5*" />
                <!--  Detalles (50%)  -->
            </Grid.RowDefinitions>

            <!--  Encabezado  -->

            <StackPanel Grid.Row="0">
                <TextBlock
                    Margin="10,10,10,15"
                    Padding="10"
                    HorizontalAlignment="Center"
                    FontSize="{StaticResource FontSizeHeader}"
                    Style="{StaticResource HeaderStyle}"
                    Text="DETALLES DE LA MODIFICACIÓN" />
                <Image
                    Width="184"
                    Height="82"
                    Source="/Resources/omegasymbol.png" />
            </StackPanel>

            <!--  Fecha y Hora  -->
            <Border
                Grid.Row="1"
                Margin="10,0,10,10"
                Background="#F1E6D3"
                BorderBrush="#6B9D89"
                CornerRadius="{StaticResource StandardCornerRadius}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="10,5,5,5"
                        VerticalAlignment="Center"
                        Style="{StaticResource HeaderStyle}"
                        Text="FECHA Y HORA:" />
                    <TextBlock
                        Name="txtFechaHora"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!--  Usuario  -->
            <Border
                Grid.Row="2"
                Margin="10,0,10,10"
                Background="#F1E6D3"
                BorderBrush="#6B9D89"
                CornerRadius="{StaticResource StandardCornerRadius}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="10,5,5,5"
                        VerticalAlignment="Center"
                        Style="{StaticResource HeaderStyle}"
                        Text="USUARIO:" />
                    <TextBlock
                        Name="txtUsuario"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!--  Tipo de Modificación  -->
            <Border
                Grid.Row="3"
                Margin="10,0,10,10"
                Background="#F1E6D3"
                BorderBrush="#6B9D89"
                CornerRadius="{StaticResource StandardCornerRadius}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="10,5,5,5"
                        VerticalAlignment="Center"
                        Style="{StaticResource HeaderStyle}"
                        Text="ACCIÓN:" />
                    <TextBlock
                        Name="txtTipoModificacion"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!--  Sección de imágenes (20% del espacio vertical disponible)  -->
            <Grid Grid.Row="4" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Imagen ANTES  -->
                <Border
                    Grid.Column="0"
                    Margin="10,0,5,0"
                    Background="White"
                    BorderBrush="#6B9D89"
                    CornerRadius="{StaticResource StandardCornerRadius}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Style="{StaticResource HeaderStyle}"
                            Text="ANTES" />

                        <Viewbox
                            Grid.Row="1"
                            MaxHeight="150"
                            Stretch="Uniform">
                            <Image Source="{Binding ImagenAntes, TargetNullValue={x:Null}}" Stretch="None" />
                        </Viewbox>
                    </Grid>
                </Border>

                <!--  Imagen DESPUES  -->
                <Border
                    Grid.Column="1"
                    Margin="5,0,10,0"
                    Background="White"
                    BorderBrush="#6B9D89"
                    CornerRadius="{StaticResource StandardCornerRadius}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Style="{StaticResource HeaderStyle}"
                            Text="DESPUÉS" />

                        <Viewbox
                            Grid.Row="1"
                            MaxHeight="150"
                            Stretch="Uniform">
                            <Image Source="{Binding ImagenDespues, TargetNullValue={x:Null}}" Stretch="None" />
                        </Viewbox>
                    </Grid>
                </Border>
            </Grid>

            <!--  Sección de Comparación (30% del espacio vertical)  -->
            <Border
                Grid.Row="5"
                Margin="10,0,10,10"
                Background="#F1E6D3"
                BorderBrush="#6B9D89"
                CornerRadius="{StaticResource StandardCornerRadius}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="10,5,5,5"
                        Style="{StaticResource HeaderStyle}"
                        Text="COMPARACIÓN DE CAMBIOS" />

                    <Grid Grid.Row="1" Margin="10,0,10,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Columna ANTES  -->
                        <Border
                            Grid.Column="0"
                            Background="White"
                            BorderBrush="#A01A7D"
                            CornerRadius="{StaticResource StandardCornerRadius}">
                            <DockPanel>
                                <TextBlock
                                    Margin="5"
                                    DockPanel.Dock="Top"
                                    Style="{StaticResource HeaderStyle}"
                                    Text="ESTADO ANTERIOR" />
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock
                                        Name="txtAntes"
                                        Margin="5"
                                        FontSize="{StaticResource FontSizeSmall}"
                                        Foreground="#2E5E4E"
                                        TextWrapping="Wrap" />
                                </ScrollViewer>
                            </DockPanel>
                        </Border>

                        <!--  Separador visual  -->
                        <Rectangle
                            Grid.Column="1"
                            Width="2"
                            Height="auto"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="#A01A7D" />

                        <!--  Columna DESPUÉS  -->
                        <Border
                            Grid.Column="2"
                            Background="White"
                            BorderBrush="#A01A7D"
                            CornerRadius="{StaticResource StandardCornerRadius}">
                            <DockPanel>
                                <TextBlock
                                    Margin="5"
                                    DockPanel.Dock="Top"
                                    Style="{StaticResource HeaderStyle}"
                                    Text="ESTADO ACTUAL" />
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock
                                        Name="txtDespues"
                                        Margin="5"
                                        FontSize="{StaticResource FontSizeSmall}"
                                        Foreground="#2E5E4E"
                                        TextWrapping="Wrap" />
                                </ScrollViewer>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!--  Sección de Motivo (50% del espacio vertical)  -->
            <Border
                Grid.Row="6"
                Margin="10,0,10,10"
                Background="#F1E6D3"
                BorderBrush="#6B9D89"
                CornerRadius="{StaticResource StandardCornerRadius}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="10,5,5,5"
                        Style="{StaticResource HeaderStyle}"
                        Text="DETALLE DE CAMBIOS" />

                    <ScrollViewer
                        Grid.Row="1"
                        Margin="10,0,10,10"
                        VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            Name="txtMotivo"
                            FontSize="{StaticResource FontSizeSmall}"
                            Foreground="#2E5E4E"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
