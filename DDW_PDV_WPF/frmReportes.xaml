<Page x:Class="DDW_PDV_WPF.frmReportes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DDW_PDV_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"

      
      Title="frmReportes">

    <Page.Resources>
        <!-- Estilo General para los Bordes -->
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para los TextBlocks con títulos -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para los valores numéricos -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para los TextBox de fechas -->
        <Style x:Key="txtFecha" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextBox.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        </Style>
    </Page.Resources>



    <Grid Margin="30" Background="#dedede" >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Text="RESUMEN DE INFORMACIÓN"
               FontSize="28" FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,10"/>

        <!-- Filtros de Fecha y Sucursal -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <DatePicker SelectedDate="{Binding FechaInicio}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <DatePicker SelectedDate="{Binding FechaFin}" Width="150"/>
            </StackPanel>

            <ComboBox Width="150" Margin="5">
                <ComboBoxItem Content="Sucursal 1"/>
                <ComboBoxItem Content="Sucursal 2"/>
                <ComboBoxItem Content="Sucursal 3"/>
            </ComboBox>
        </StackPanel>

        <!-- Contenedores de Información -->
        <Grid Grid.Row="2" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Ventas -->
            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource BorderStyle}"
            HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="VENTAS" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="54" Style="{StaticResource ValueTextStyle}" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Total Ventas -->
            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}"
            HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="TOTAL DE VENTAS" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="$ 5678.50 MXN" Style="{StaticResource ValueTextStyle}" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Ganancias -->
            <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource BorderStyle}"
            HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="GANANCIAS" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="$ 2345.00 MXN" Style="{StaticResource ValueTextStyle}" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Producto Más Vendido -->
            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource BorderStyle}"
            HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PRODUCTO MÁS VENDIDO" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="RAMO ROSA #44" Style="{StaticResource ValueTextStyle}" FontWeight="Bold"/>
                    <TextBlock Text="30 PZ." Style="{StaticResource ValueTextStyle}" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Usuario con Más Ventas -->
            <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource BorderStyle}"
            HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="USUARIO CON MÁS VENTAS" Style="{StaticResource TitleTextStyle}"/>
                    <TextBlock Text="JUAN PÉREZ" Style="{StaticResource ValueTextStyle}" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Botón Generar PDF -->
        <Button Grid.Row="3" Content="GENERAR PDF"
        Background="Gray" Foreground="White"
        FontSize="18"  Width="Auto" Height="65"
        HorizontalAlignment="Center" Padding="50,20,50,20"
        Click="Button_Click"/>
        
    </Grid>



</Page>
