<Page
    x:Class="DDW_PDV_WPF.frmInventarios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DDW_PDV_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="frmInventarios"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Estilos compartidos  -->
        <Style TargetType="ListBoxItem">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f0f0f0" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#d0d0d0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DetailTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="MinHeight" Value="35" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#E5C1DC" />
        </Style>

        <!--  Estilo base para GroupBox  -->
        <Style x:Key="CustomGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#6B9D89" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="white" />
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border
                            Background="White"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <!--  Header con fondo y margen  -->
                                <Border
                                    Grid.Row="0"
                                    Margin="10,0,10,0"
                                    Padding="5,0,5,0"
                                    Background="#6B9D89">
                                    <ContentPresenter
                                        ContentSource="Header"
                                        RecognizesAccessKey="True"
                                        TextBlock.FontWeight="Bold" />
                                </Border>
                                <!--  Contenido  -->
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="662*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" MinWidth="300" />
            <ColumnDefinition Width="0.6*" MinWidth="450" />
        </Grid.ColumnDefinitions>

        <!--  Panel izquierdo - Lista de productos  -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,1,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Título INVENTARIO  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Foreground="#2E5E4E"
                Text="INVENTARIO" />

            <!--  Barra de búsqueda  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,10"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="3">
                <Grid>
                    <TextBox
                        x:Name="txtBusqueda"
                        Padding="10"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="#333333"
                        Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Padding="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Text="Buscar artículos..."
                        Visibility="{Binding TextoBusqueda, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=inverse}" />

                    <Button
                        x:Name="btnClearSearch"
                        Width="20"
                        Height="20"
                        Margin="0,0,10,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding LimpiarBusquedaCommand}"
                        Content="✕"
                        FontSize="12"
                        Foreground="Gray"
                        Visibility="{Binding TextoBusqueda, Converter={StaticResource StringToVisibilityConverter}}" />
                </Grid>
            </Border>

            <!--  Lista de productos  -->
            <Border
                Grid.Row="1"
                Background="#F1E6D3"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5">
                <ListBox
                    x:Name="lstProductos"
                    HorizontalContentAlignment="Stretch"
                    ItemsSource="{Binding ListaArticulos}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding ArticuloSeleccionado, Mode=TwoWay}">
                    <!--  Asegura que el contenido se estire  -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <!--  Estira cada item  -->
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Background" Value="Transparent" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f0f0f0" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#d0d0d0" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,2"
                                Padding="5"
                                Background="white"
                                BorderBrush="white"
                                BorderThickness="0,0,0,1">
                                <!--  Fondo transparente para heredar el color  -->
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding Descripcion}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{Binding Color}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="{Binding IdCategoria, StringFormat='Categoría: {0}'}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <StackPanel
                Grid.Row="2"
                Margin="0,15"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <!--  Estilo compartido para ambos botones-texto  -->
                <StackPanel.Resources>
                    <Style x:Key="TextButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Foreground" Value="#767676" />
                        <Setter Property="FontSize" Value="20" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <TextBlock
                                        x:Name="ContentText"
                                        Padding="8,4"
                                        Text="{TemplateBinding Content}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextDecorations" Value="None" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                                        <Setter Property="Foreground" Value="#A01A7D" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <!--  Botón Agregar  -->
                <Button
                    x:Name="BotonAgregar1"
                    Margin="0,0,20,0"
                    Click="BotonAgregar"
                    Content="+  Agregar"
                    Foreground="Green"
                    Style="{StaticResource TextButtonStyle}" />

                <!--  Botón Quitar  -->
                <Button
                    x:Name="BotonQuitar1"
                    Click="EliminarArticulo"
                    Content="−   Quitar"
                    Foreground="Red"
                    Style="{StaticResource TextButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  Panel derecho - Detalles del producto  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,1,10,10"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <ScrollViewer Padding="15" VerticalScrollBarVisibility="Auto">
                <Grid DataContext="{Binding ArticuloSeleccionado}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0.3*" MinHeight="200" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Encabezado compacto  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">

                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#2E5E4E"
                            Text="{Binding Descripcion}"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="150" />
                            <ColumnDefinition Width="*" MinWidth="150" />
                        </Grid.ColumnDefinitions>

                        <!--  Imagen del producto - Versión responsiva  -->
                        <Border
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Background="#E5C1DC"
                            CornerRadius="5">
                            <Grid>
                                <Viewbox MaxHeight="140" Stretch="Uniform">
                                    <Image
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{Binding ImagenProducto, TargetNullValue={x:Null}}"
                                        Stretch="None" />
                                </Viewbox>

                                <Button
                                    x:Name="BtnCambiarImagen"
                                    Width="28"
                                    Height="28"
                                    Margin="5"
                                    Padding="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Background="White"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    Click="BtnSeleccionarImagen_Click"
                                    Content="📷"
                                    FontSize="12"
                                    ToolTip="Cambiar imagen" />
                            </Grid>
                        </Border>



                        <Border
                            Grid.Column="1"
                            Background="white"
                            CornerRadius="5">
                            <Grid>
                                <!--  Código QR  -->
                                <Viewbox Stretch="Uniform">
                                    <Image
                                        x:Name="imgCodigoQR"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Stretch="None" />
                                </Viewbox>

                                <!--  Botón de exportación  -->
                                <Button
                                    x:Name="btnExportarQR"
                                    Margin="5"
                                    Padding="8,4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Background="#6B9D89"
                                    BorderThickness="0"
                                    Click="BtnExportarQR_Click"
                                    Content="Exportar QR"
                                    Foreground="White"
                                    ToolTip="Exportar código QR como imagen" />
                            </Grid>
                        </Border>
                    </Grid>

                    <!--  Grupo Descripción compacto  -->
                    <GroupBox
                        Grid.Row="2"
                        Margin="0,0,0,5"
                        Header="Descripción"
                        Style="{StaticResource CustomGroupBoxStyle}">


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*" />
                                <ColumnDefinition Width="0.8*" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.Column="1"
                                MinHeight="28"
                                MouseDoubleClick="txtDescripcion_MouseDoubleClick"
                                Style="{StaticResource DetailTextBoxStyle}"
                                Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </GroupBox>

                    <!--  Grupo Características y Categoría optimizados  -->
                    <Grid Grid.Row="3" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*" />
                            <ColumnDefinition Width="0.4*" />
                        </Grid.ColumnDefinitions>

                        <!--  Características  -->
                        <GroupBox
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Header="Características"
                            Style="{StaticResource CustomGroupBoxStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*" />
                                        <ColumnDefinition Width="0.6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Margin="8,5,5,5"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#555555"
                                        Text="Color:" />
                                    <TextBox
                                        Grid.Column="1"
                                        MinHeight="28"
                                        Style="{StaticResource DetailTextBoxStyle}"
                                        Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*" />
                                        <ColumnDefinition Width="0.6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Margin="8,5,5,5"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#555555"
                                        Text="Tamaño:" />
                                    <TextBox
                                        Grid.Column="1"
                                        MinHeight="28"
                                        Style="{StaticResource DetailTextBoxStyle}"
                                        Text="{Binding Tamanio, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <!--  Categoría  -->
                        <GroupBox
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Header="Categoría">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.2*" />
                                    <ColumnDefinition Width="0.8*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox
                                    x:Name="cmbCategoria"
                                    Grid.Column="1"
                                    Margin="5"
                                    DisplayMemberPath="Nombre"
                                    SelectedValuePath="idCategoria"
                                    SelectionChanged="cmbCategoriaCambio" />

                            </Grid>
                        </GroupBox>
                    </Grid>

                    <!--  Grupo Inventario optimizado  -->
                    <GroupBox
                        Grid.Row="4"
                        Margin="0,0,0,5"
                        Header="Inventario"
                        Style="{StaticResource CustomGroupBoxStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.33*" />
                                <ColumnDefinition Width="0.33*" />
                                <ColumnDefinition Width="0.34*" />
                            </Grid.ColumnDefinitions>

                            <!--  Stock  -->
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*" />
                                    <ColumnDefinition Width="0.6*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="8,5,5,5"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#555555"
                                    Text="Stock:" />
                                <TextBox
                                    x:Name="txtStock"
                                    Grid.Column="1"
                                    MinHeight="28"
                                    Style="{StaticResource DetailTextBoxStyle}"
                                    Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <!--  Mínimo  -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*" />
                                    <ColumnDefinition Width="0.6*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="8,5,5,5"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#555555"><Run Text="Mín" /><Run Language="es-mx" Text="." /></TextBlock>
                                <TextBox
                                    x:Name="txtMin"
                                    Grid.Column="1"
                                    MinHeight="28"
                                    Style="{StaticResource DetailTextBoxStyle}"
                                    Text="{Binding Min, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <!--  Máximo  -->
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*" />
                                    <ColumnDefinition Width="0.6*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="8,5,5,5"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#555555"><Run Text="Máx" /><Run Language="es-mx" Text="." /></TextBlock>
                                <TextBox
                                    x:Name="txtMax"
                                    Grid.Column="1"
                                    MinHeight="28"
                                    Style="{StaticResource DetailTextBoxStyle}"
                                    Text="{Binding Max, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <!--  Grupo Código y Precios en una línea  -->
                    <Grid Grid.Row="5" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*" />
                            <ColumnDefinition Width="0.6*" />
                        </Grid.ColumnDefinitions>

                        <!--  Código  -->
                        <GroupBox
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Header="Código de Barras"
                            Style="{StaticResource CustomGroupBoxStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.2*" />
                                    <ColumnDefinition Width="0.8*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="8,5,5,5"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#555555"
                                    Text="Código:" />
                                <TextBox
                                    x:Name="txtCodigo"
                                    Grid.Column="1"
                                    MinHeight="28"
                                    Style="{StaticResource DetailTextBoxStyle}"
                                    Text="{Binding CodigoBarras, UpdateSourceTrigger=PropertyChanged}"
                                    TextChanged="txtCodigo_TextChanged" />
                            </Grid>
                        </GroupBox>

                        <!--  Precios  -->
                        <GroupBox
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Header="Precios"
                            Style="{StaticResource CustomGroupBoxStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="0.5*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*" />
                                        <ColumnDefinition Width="0.6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Margin="8,5,5,5"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#555555"
                                        Text="P. Venta:" />
                                    <TextBox
                                        x:Name="txtPrecioVenta"
                                        Grid.Column="1"
                                        MinHeight="28"
                                        Style="{StaticResource DetailTextBoxStyle}"
                                        Text="{Binding PrecioVenta, StringFormat='{}{0:C}', UpdateSourceTrigger=LostFocus}" />
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*" />
                                        <ColumnDefinition Width="0.6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Margin="8,5,5,5"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#555555"
                                        Text="P. Compra:" />
                                    <TextBox
                                        x:Name="txtPrecioCompra"
                                        Grid.Column="1"
                                        MinHeight="28"
                                        Style="{StaticResource DetailTextBoxStyle}"
                                        Text="{Binding PrecioCompra, StringFormat='{}{0:C}', UpdateSourceTrigger=LostFocus}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <!--  Botones de acción  -->
                    <StackPanel
                        Grid.Row="6"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Visibility="{Binding HasChanges, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button
                            x:Name="btnCancelarCambios"
                            Width="110"
                            Height="30"
                            Margin="0,0,8,10"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Click="Cancelar_Click"
                            Content="Cancelar" />
                        <Button
                            x:Name="btnGuardarCambios"
                            Width="110"
                            Height="30"
                            Margin="0,0,8,10"
                            Background="#6B9D89"
                            BorderThickness="0"
                            Click="GuardarCambios"
                            Content="Guardar"
                            Foreground="White" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>