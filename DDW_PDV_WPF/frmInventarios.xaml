<Page x:Class="DDW_PDV_WPF.frmInventarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDW_PDV_WPF"
        mc:Ignorable="d"
        Title="frmInventarios" Height="720" Width="1050">
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="30" Background="{TemplateBinding Background}" Margin="0,20,0,0" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5.8333*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#FFFFFF" Padding="15">
            <Grid Margin="10">
                <!-- Definición de filas -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- CERRAR SESION -->
                    <RowDefinition Height="Auto"/>
                    <!-- User1 -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botones -->
                </Grid.RowDefinitions>

                <!-- Botón CERRAR SESION -->
                    <Button Content="CERRAR SESION" 
                    FontSize="12"
                    HorizontalAlignment="Left" 
                    Padding="10 5" 
                    Background="Transparent" 
                    Foreground="#FFE74C3C" 
                    FontWeight="Bold" 
                    BorderThickness="0"
                    Margin="-10,0,0,20"
                    Grid.Row="0" Click="Button_Click_1"/>

                <!-- TextBlock User1 -->
                <TextBlock Text="User1" 
       FontSize="18" 
       FontWeight="Bold" 
       Foreground="#8B8B8B" 
       Margin="0,10,0,20"
       Grid.Row="1"/>

                <!-- Contenedor de botones -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0" HorizontalAlignment="Left">
                    <!-- Estilo para los botones -->
                    <StackPanel.Resources>
                        <Style TargetType="Button" x:Key="MenuButtonStyle">
                            <!-- Estilo base -->
                            <Setter Property="Foreground" Value="#8B8B8B"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Width" Value="110"/>
                            <Setter Property="Margin" Value="0,0,0,5"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <!-- Cambia el cursor a una mano -->

                            <!-- Estilo cuando está seleccionado -->
                            <Style.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Foreground" Value="#333333"/>
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Botones -->
                    <Button Content="Ventas" Style="{StaticResource MenuButtonStyle}" Click="Button_Click"/>
                    <Button Content="Inventario" Style="{StaticResource MenuButtonStyle}" Click="Button_Click_2"/>
                    <Button Content="Historial" Style="{StaticResource MenuButtonStyle}" Click="Button_Click_3"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="0" Background="#dedede" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="76*"/>
                    <RowDefinition Height="61*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="INVENTARIO" 
                   FontSize="33" 
                   FontWeight="Bold" 
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" Height="48" Width="209" Margin="-82,0,0,0"/>
                <TextBox x:Name="txtHora" Style="{DynamicResource txtFecha}" Background="#f7f7f7" Height="41" Margin="0,0,20,0" VerticalAlignment="Center" IsEnabled="False"
                 Foreground="#767676" FontWeight="Bold" TextAlignment="Center" Grid.Row="1" />
            </Grid>
            <TextBox x:Name="txtFecha" Style="{DynamicResource txtFecha}" Background="#f7f7f7" Height="41" Margin="10,86,10,0" VerticalAlignment="Top" IsEnabled="False" Grid.Column="0"
            Foreground="#767676" FontWeight="Bold" TextAlignment="Center" />

            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Background="White" MinHeight="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="580" Margin="10,10,0,0"/>
                <ScrollViewer Background="#767676" Grid.Row="1" Margin="10,10,0,0" >
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="PRODUCTO 1" 
                    FontSize="22" 
                    FontWeight="Bold" 
                    Foreground="Black" 
                    Margin="20,0,0,20"
                    HorizontalAlignment="Left"
                    Grid.Column="0"
                    VerticalAlignment="Center"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3.5*"/>
                        <ColumnDefinition Width="6.5*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#ffff" Margin="10,0,10,0" CornerRadius="15">
                    </Border>
                    <Border Grid.Column="1" Background="#767676" Margin="10,0,10,0" CornerRadius="15">
                    </Border>

                </Grid>
                <TextBox Grid.Row="2" Background="White" MinHeight="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="580" Margin="10,10,10,0"/>
                <TextBox Grid.Row="3" Background="White" MinHeight="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="580" Margin="10,10,10,0"/>
                <TextBox Grid.Row="4" Background="White" MinHeight="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="580" Margin="10,10,10,0"/>
                <TextBox Grid.Row="5" Background="White" MinHeight="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="580" Margin="10,10,10,0"/>
                <TextBox Grid.Row="6" Background="White" MinHeight="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="580" Margin="10,10,10,0"/>
                <TextBox Grid.Row="7" Background="White" MinHeight="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="580" Margin="10,10,10,0"/>

            </Grid>
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Agregar Producto" 
                   FontSize="12" 
                   FontWeight="Bold" 
                   Foreground="Black" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Right"
                   Grid.Column="1"
                   VerticalAlignment="Center"/>

                <TextBlock Text="Quitar Producto" 
                   FontSize="12" 
                   FontWeight="Bold" 
                   Foreground="Black" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Right"
                   Grid.Column="4"
                   VerticalAlignment="Center"/>
                <Button Grid.Column="0" Content="+" Style="{StaticResource RoundedButtonStyle}" Width="auto" Height="Auto" Grid.ColumnSpan="2" Margin="0,-8,111,14"/>
                <Button Grid.Column="3" Content="-" Style="{StaticResource RoundedButtonStyle}" Width="auto" Height="Auto" Margin="0,-8,0,14"  />
            </Grid>
        </Grid>

    </Grid>
</Page>
