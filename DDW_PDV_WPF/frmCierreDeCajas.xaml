<Page x:Class="DDW_PDV_WPF.frmCierreDeCajas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DDW_PDV_WPF"
      mc:Ignorable="d" 
      Title="frmCierreDeCajas">

    <Grid Margin="20" Background="#dedede">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="279*"/>
            <RowDefinition Height="7*"/>
            <!-- Contenido Principal -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Tabla de Cierre de Cajas -->
            <ColumnDefinition Width="1.2*"/>
            <!-- Detalles del Cierre -->
        </Grid.ColumnDefinitions>

        <!-- Encabezado -->
        <Grid Grid.ColumnSpan="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Cierre de Cajas" FontSize="24" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,10,10,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de Búsqueda -->
            <Border Grid.Row="0" BorderBrush="#FFABAdB3" BorderThickness="1" Background="White" CornerRadius="3" Margin="10,0,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtBusqueda" Text="" Background="Transparent" BorderThickness="0" Padding="10" FontSize="14" VerticalAlignment="Center" Foreground="Black" Grid.Column="0"/>
                    <Button x:Name="btnClearSearch" Content="✕" FontSize="12" Foreground="Gray" Background="Transparent" BorderThickness="0" Padding="0" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Tabla de Datos -->
            <DataGrid Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column" Background="White" Margin="10,0,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha y Hora" Width="*"/>
                    <DataGridTextColumn Header="Sucursal" Width="*"/>
                    <DataGridTextColumn Header="Número de Caja" Width="*"/>
                    <DataGridTextColumn Header="Saldo Inicial" Width="*"/>
                    <DataGridTextColumn Header="Total Sistema" Width="*"/>
                    <DataGridTextColumn Header="Total Físico" Width="*"/>
                    <DataGridTextColumn Header="Diferencia" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Detalles del Cierre -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#F5F5F5"  Margin="10,0,0,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Background="#F5F5F5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="DETALLES DEL CIERRE" FontSize="18" FontWeight="Bold" Foreground="Gray" Grid.Row="0"/>
                <TextBlock Text="FECHA Y HORA" FontWeight="Bold" Grid.Row="1"/>
                <TextBlock Name="txtFechaHora" Grid.Row="2"/>
                <TextBlock Text="CAJA No:" FontWeight="Bold" Grid.Row="3"/>
                <TextBlock Name="txtCajaNumero" Grid.Row="4"/>
                <TextBlock Text="SUCURSAL:" FontWeight="Bold" Grid.Row="5"/>
                <TextBlock Name="txtSucursal" Grid.Row="6"/>
                <Separator Grid.Row="7" Margin="0,10,0,10"/>
                <TextBlock Text="TOTAL DECIMAL DEL SISTEMA:" FontWeight="Bold" Grid.Row="8"/>
                <TextBlock Name="txtTotalSistema" Grid.Row="9"/>
                <TextBlock Text="TOTAL DECIMAL FÍSICO:" FontWeight="Bold" Grid.Row="10"/>
                <TextBlock Name="txtTotalFisico" Grid.Row="11"/>
                <TextBlock Text="DIFERENCIA:" FontWeight="Bold" Grid.Row="12"/>
                <TextBlock Name="txtDiferencia" Grid.Row="13"/>
                <Button Content="VER INFORME DETALLADO" Width="183" Height="40" Margin="2,10,0,0" 
            Background="Gray" Foreground="White" BorderThickness="0" Cursor="Hand" Grid.Row="14" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
    </Grid>

</Page>
