<Window
    x:Class="DDW_PDV_WPF.frmVentanaPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sistema de Gestión - Omega"
    Width="1366"
    Height="768"
    MinWidth="1000"
    MinHeight="600"
    Icon="/Resources/omegasymbol.png"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  Estilo para la barra lateral  -->
        <Style x:Key="SidebarStyle" TargetType="Border">
            <Setter Property="Background" Value="#2E5E4E" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Width" Value="180" />
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#ffff" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="10,8,10,8" />
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#485C54" />
                    <Setter Property="Background" Value="#568875" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#000000" />
                    <Setter Property="Background" Value="#6B9D89" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="LogoutButtonStyle"
            BasedOn="{StaticResource MenuButtonStyle}"
            TargetType="Button">
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,20,0,10" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="WelcomeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#8B8B8B" />
            <Setter Property="Margin" Value="0,10,0,20" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <Grid Background="#2E5E4E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="0.15*"
                MinWidth="150"
                MaxWidth="220" />
            <ColumnDefinition Width="0.85*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource SidebarStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="2">
                    <Button
                        Grid.Row="0"
                        Margin="10,20,0,0"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BtnCerrarSesion_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent">
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <Image
                                            Width="24"
                                            Height="24"
                                            VerticalAlignment="Center"
                                            Source="/Resources/PowerSymbol1.png" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            FontSize="13"
                                            FontWeight="Bold"
                                            Foreground="#000"
                                            Text="CERRAR SESIÓN" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Image
                        Width="150"
                        Height="76"
                        Margin="0,10,0,13"
                        Source="/Resources/omegasymbol.png" />


                    <Button
                        x:Name="buttonVentas"
                        Margin="8"
                        Click="NavigateToVentas"
                        Content="Ventas"
                        FontSize="27"
                        Style="{StaticResource MenuButtonStyle}" />

                    <Button
                        x:Name="buttonCerrarCaja"
                        Margin="8"
                        HorizontalAlignment="Left"
                        Click="btnCerrarCaja"
                        Content="Cerrar caja"
                        FontSize="18"
                        Style="{StaticResource MenuButtonStyle}" />

                    <Button
                        x:Name="buttonInventario"
                        Margin="8"
                        Click="NavigateToInventarios"
                        Content="Inventario"
                        FontSize="20"
                        Style="{StaticResource MenuButtonStyle}" />

                    <Button
                        x:Name="buttonResumen"
                        Margin="8"
                        Click="NavigateToReportes"
                        Content="Rep. Ventas"
                        FontSize="16"
                        Style="{StaticResource MenuButtonStyle}" />

                    <Button
                        x:Name="buttonHistorial"
                        Margin="8"
                        Click="NavigateHistorial"
                        Content="Historial Invent."
                        FontSize="16"
                        Style="{StaticResource MenuButtonStyle}" />

                    <Button
                        x:Name="buttonCierreCajas"
                        Margin="8"
                        Click="NavigateCierre"
                        Content="Historial C. Cajas"
                        FontSize="16"
                        Style="{StaticResource MenuButtonStyle}" />

                    <Button
                        x:Name="btnBorrarCache"
                        Margin="8"
                        Click="clickBorrarCache"
                        Content="Borrar Cache"
                        FontSize="14"
                        Style="{StaticResource MenuButtonStyle}"
                        Visibility="Hidden" />

                </StackPanel>
                <StackPanel Grid.Row="3" Margin="0,0,0,0">

                    <Button
                        Width="142"
                        Height="48"
                        Margin="0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ConfigClick">
                        <Image
                            Width="142"
                            Height="48"
                            Margin="0"
                            Source="/Resources/ddwlogoblanco.png" />
                    </Button>
                    <TextBlock
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        FontSize="9"
                        Foreground="White"
                        Text="Powered By:   Digital DreamWeaver" />
                    <TextBlock
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        FontSize="9"
                        Foreground="White"
                        Text="Versión 1. 5. 0 " />

                </StackPanel>

            </Grid>
        </Border>


        <Frame
            x:Name="MainFrame"
            Grid.Column="1"
            Background="#F9F9F9"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
