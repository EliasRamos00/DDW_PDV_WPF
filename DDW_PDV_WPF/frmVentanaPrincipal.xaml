<Window x:Class="DDW_PDV_WPF.frmVentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gestión - Omega"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/omegasymbol.png">

    <Window.Resources>
        <!-- Estilo para la barra lateral -->
        <Style TargetType="Border" x:Key="SidebarStyle">
            <Setter Property="Background" Value="#2E5E4E"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="180"/>
        </Style>

        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Foreground" Value="#ffff"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8,10,8"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#485C54"/>
                    <Setter Property="Background" Value="#568875"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#000000"/>
                    <Setter Property="Background" Value="#6B9D89"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="LogoutButtonStyle" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="WelcomeTextStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#8B8B8B"/>
            <Setter Property="Margin" Value="0,10,0,20"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Background="#2E5E4E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*" MinWidth="150" MaxWidth="220"/>
            <ColumnDefinition Width="0.85*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource SidebarStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                

                <StackPanel Grid.Row="1" Margin="0,0,10,0">
                    <Button Content="⏻ CERRAR SESIÓN"
                    Style="{StaticResource LogoutButtonStyle}"
                    Click="BtnCerrarSesion_Click"/>
                    <Image Source="/Resources/omegasymbol.png"></Image>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Button Content="Ventas" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="NavigateToVentas"
                            FontSize="18"/>

                    <Button Content="Inventario" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="NavigateToInventarios"
                            FontSize="16"/>

                    <Button Content="Resumen" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="NavigateToReportes"
                            FontSize="16"/>

                    <Button Content="Historial" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="NavigateHistorial"
                            FontSize="16"/>

                    <Button Content="Cierre de cajas" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="NavigateCierre"
                            FontSize="14"/>
                </StackPanel>

                
            </Grid>
        </Border>


        <Frame x:Name="MainFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="#F9F9F9"/>
    </Grid>
</Window>
