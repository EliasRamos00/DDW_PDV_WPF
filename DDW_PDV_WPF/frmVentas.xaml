<Page x:Class="DDW_PDV_WPF.frmVentas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DDW_PDV_WPF"
      mc:Ignorable="d"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Flores artificiales OMEGA"
      PreviewTextInput="Window_PreviewTextInput">
    <Page.Resources>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <ControlTemplate x:Key="btnProducto" TargetType="{x:Type ButtonBase}">
            <Border x:Name="border" CornerRadius="20" Background="White" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="Imagenes\pink-flower-white-background.jpg" 
                       Width="100" 
                       Height="100" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,10,0,0"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Nombre del Producto" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="12"
                       FontWeight="Bold"
                       Grid.Row="1"/>

                    <TextBlock Text="Categoría" 
                               Background="#6B9D89"
                               Foreground="White"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontSize="12"
               Margin="10,5,0,0"
               Grid.Row="2" Grid.Column="0" Grid.RowSpan="2"/>

                    <TextBlock Text="$50"
               FontSize="14"
               FontWeight="Bold"
               Margin="102,4,10,13"
               Grid.Row="2" Grid.RowSpan="2"/>

                    <ContentPresenter x:Name="contentPresenter" 
                      Focusable="False" 
                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                      Margin="{TemplateBinding Padding}" 
                      RecognizesAccessKey="True" 
                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                      Grid.Row="3" Grid.Column="0"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsDefaulted" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                    <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <SolidColorBrush x:Key="TextBox.Static.Border" Color="#FFABAdB3"/>
        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#FF7EB4EA"/>
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#FF569DE5"/>
        <Style x:Key="txtFecha" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextBox.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.Focus.Border}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled" Value="true"/>
                        <Condition Property="IsSelectionActive" Value="false"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="SelectionBrush" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#A01A7D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="390" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#ffff" HorizontalAlignment="Stretch">
            <Grid Margin="0,0,-10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="49*"/>
                    <ColumnDefinition Width="617*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,10,10,10" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="10,10,10,10" 
                         Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBox x:Name="txtFecha" Style="{DynamicResource txtFecha}" Background="#F1E6D3" Height="41" Width="250"
                         Foreground="#2E5E4E" FontWeight="Bold" TextAlignment="Center" md:HintAssist.Hint="Fecha"
                         IsEnabled="False" Margin="0,0,20,0"/>
                        <TextBox x:Name="txtHora" Style="{DynamicResource txtFecha}" Background="#F1E6D3" Height="41" Width="120"
                         Foreground="#2E5E4E" FontWeight="Bold" TextAlignment="Center" md:HintAssist.Hint="Hora"
                         IsEnabled="False"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" PanningMode="HorizontalOnly">
                        <ListView ItemsSource="{Binding Categorias}" HorizontalAlignment="Center" Margin="0,10,0,10" 
                            ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Button Height="157" Width="136" Margin="10,0,10,0" VerticalContentAlignment="Bottom" Background="White">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Source="{Binding Foto}" Stretch="UniformToFill" Width="75" Height="75" VerticalAlignment="Center" Margin="0,0,0,20"/>
                                            <TextBlock Text="{Binding Nombre}" HorizontalAlignment="Center" Foreground="#2E5E4E"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>

                    <TextBox Background="#F1E6D3" Grid.Row="2" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="580" Margin="0,10,0,10" Foreground="#2E5E4E"/>
                </Grid>

                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer Margin="35,0,35,0" VerticalScrollBarVisibility="Hidden" Grid.RowSpan="2">
                        <ItemsControl ItemsSource="{Binding ListaArticulos}" MaxHeight="500">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="150" ItemHeight="150" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Height="150" Width="150" Margin="5" BorderBrush="#A01A7D" BorderThickness="1,1,1,1"  Background="Transparent" Click="ClickProducto">
                                        <Button.Content>
                                            <StackPanel>
                                                <Image Height="100" Width="100" Source="{Binding Foto}" Stretch="UniformToFill"/>
                                                <TextBlock TextWrapping="Wrap" Text="{Binding Descripcion}" HorizontalAlignment="Center" Foreground="White"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Column="2" Background="#FFFFFF" Padding="15" Grid.ColumnSpan="2" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="DETALLES DE LA VENTA" 
                   FontSize="18" FontWeight="Bold" Foreground="#2E5E4E"
                   Margin="0,20,0,20" HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="1" Text="Carrito de artículos" 
                   FontSize="16" FontWeight="Bold" Foreground="#2E5E4E"
                   Margin="0,0,0,10" Width="241"/>

                <ListView Grid.Row="2" ItemsSource="{Binding CarritoVenta}" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  MaxHeight="{Binding PantallaDisponible}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5" Padding="5" Margin="0,0,0,5" 
                            CornerRadius="5" Height="70" Width="auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding Foto}" Width="60" Height="60" Grid.Column="0" VerticalAlignment="Top" Margin="2,0,4,0"/>

                                    <StackPanel Grid.Column="1" Margin="0,0,4,0">
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Descripcion}" FontSize="12" FontWeight="Bold" Width="100" Foreground="#2E5E4E"/>
                                        <TextBlock Text="{Binding PrecioVenta, StringFormat=C }" FontSize="10" Foreground="#6B9D89"/>
                                        <TextBlock Text="{Binding IdCategoria}" FontSize="10" Foreground="#8FBBA9"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding TotalCarrito, StringFormat=C}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,5,0" Grid.Column="2" Width="60" Foreground="#2E5E4E"/>

                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="1">
                                        <Button Padding="2,2,2,2" Click="DecrementarCantidad" FontSize="20" Content="-" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="Auto" Margin="10,0,0,10" Background="#A01A7D" Foreground="White"/>
                                        <Label Padding="0,0,0,0" Margin="2,0,0,0" Content="{Binding Cantidad}" Width="20" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="#2E5E4E"/>
                                        <Button Padding="0,2,2,2" Click="IncrementarCantidad" IsEnabled="True" FontSize="20" Content="+" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="Auto" Margin="5,0,0,10" Background="#A01A7D" Foreground="White"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="3" Margin="10,5,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Recibí: " FontSize="21" Foreground="#2E5E4E" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,5,10,5" FontSize="21" TextAlignment="Right"
                 Foreground="#2E5E4E" Background="White" Padding="5"
                 Text="{Binding MontoRecibido, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Stretch"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Subtotal: " FontSize="21" Foreground="#2E5E4E" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,5,10,5" TextAlignment="Right"
                   Text="{Binding SubTotal, StringFormat=C2}" FontSize="26"
                   Foreground="#2E5E4E" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total: " FontSize="33" Foreground="#2E5E4E" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,5,10,5" TextAlignment="Right"
                   Text="{Binding Total, StringFormat=C2}" FontSize="44" FontWeight="Bold"
                   Foreground="#A01A7D" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Cambio: " FontSize="24" Foreground="#2E5E4E" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtCambio" Grid.Row="3" Grid.Column="1" Margin="0,5,10,5" TextAlignment="Right"
                   Text="{Binding Cambio, StringFormat=C2}" FontSize="30" FontWeight="Bold"
                   Foreground="#6B9D89" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <Button Grid.Row="4" Content="CERRAR VENTA" 
        Margin="0,20,0,0" Padding="15"
        HorizontalAlignment="Stretch"
        Background="#A01A7D" Foreground="White"
        FontWeight="Bold" BorderThickness="0"
        MinWidth="217" Height="46" FontFamily="Arial"
        Click="CerrarVenta"/>

            </Grid>
        </Border>
    </Grid>
</Page>