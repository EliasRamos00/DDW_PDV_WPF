<Page
    x:Class="DDW_PDV_WPF.frmVentas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlador="clr-namespace:DDW_PDV_WPF.Controlador"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DDW_PDV_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Flores artificiales OMEGA"
    PreviewTextInput="Window_PreviewTextInput"
    mc:Ignorable="d">

    <Page.Resources>
        <controlador:CurrencyConverter x:Key="CurrencyConverter" />
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD" />
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1" />
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6" />
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B" />
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4" />
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5" />
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383" />
        <ControlTemplate x:Key="btnProducto" TargetType="{x:Type ButtonBase}">
            <Border
                x:Name="border"
                Background="White"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="20"
                SnapsToDevicePixels="true">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />

                        <RowDefinition Height="Auto" />

                        <RowDefinition Height="Auto" />

                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="auto" />

                    </Grid.ColumnDefinitions>


                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Width="100"
                        Height="100"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="Imagenes\pink-flower-white-background.jpg" />

                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Nombre del Producto" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Margin="10,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#d9d9d9"
                        FontSize="12"
                        Foreground="#4a4a4a"
                        Text="Categoría" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.RowSpan="2"
                        Margin="102,4,10,13"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="$50" />

                    <ContentPresenter
                        x:Name="contentPresenter"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="{TemplateBinding Padding}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        Focusable="False"
                        RecognizesAccessKey="True"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsDefaulted" Value="true">
                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource Button.MouseOver.Background}" />
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.MouseOver.Border}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource Button.Pressed.Background}" />
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Pressed.Border}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter TargetName="border" Property="Background" Value="{StaticResource Button.Disabled.Background}" />
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Disabled.Border}" />
                    <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource Button.Disabled.Foreground}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <SolidColorBrush x:Key="TextBox.Static.Border" Color="#FFABAdB3" />
        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#FF7EB4EA" />
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#FF569DE5" />
        <Style x:Key="txtFecha" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
            <Setter Property="BorderBrush" Value="{StaticResource TextBox.Static.Border}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="AllowDrop" Value="true" />
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="False" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20"
                            SnapsToDevicePixels="True">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Focusable="false"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="border" Property="Opacity" Value="0.56" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TextBox.MouseOver.Border}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TextBox.Focus.Border}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled" Value="true" />
                        <Condition Property="IsSelectionActive" Value="false" />
                    </MultiTrigger.Conditions>
                    <Setter Property="SelectionBrush" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="126*" />
            <RowDefinition Height="389*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="390" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="#ffff">
            <Grid Margin="0,0,-10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="49*" />
                    <ColumnDefinition Width="617*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>




                    <Button
                        Width="150"
                        Height="30"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Background="White"
                        BorderBrush="#2E5E4E"
                        Click="BtnRefrescar_Click"
                        Content="🔄 Refrescar." />

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        PanningMode="HorizontalOnly"
                        VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal">
                            <!--  Botón TODOS - Fijo al inicio  -->
                            <Button
                                x:Name="btnTodos"
                                Width="136"
                                Height="155"
                                Margin="10,0,10,0"
                                VerticalContentAlignment="Bottom"
                                Background="White"
                                BorderBrush="#2E5E4E"
                                Click="FiltrarPorCategoria"
                                Tag="0">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <Image
                                        Margin="0,0,0,20"
                                        VerticalAlignment="Center"
                                        Source="/Resources/omegasymbol.png"
                                        Stretch="UniformToFill" />


                                    <TextBlock HorizontalAlignment="Center" Text="TODOS" />
                                </StackPanel>
                            </Button>

                            <!--  ListView de categorías  -->
                            <ListView
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Categorias}"
                                KeyboardNavigation.TabNavigation="None"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.ScrollUnit="Pixel">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Width="136"
                                            Height="155"
                                            Margin="10,0,10,0"
                                            VerticalContentAlignment="Bottom"
                                            Background="White"
                                            BorderBrush="#2E5E4E"
                                            Click="FiltrarPorCategoria"
                                            Tag="{Binding idCategoria}">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">
                                                <Image
                                                    Width="75"
                                                    Height="75"
                                                    Margin="0,0,0,20"
                                                    VerticalAlignment="Center"
                                                    Source="{Binding Foto}"
                                                    Stretch="UniformToFill" />
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    Text="{Binding Nombre}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>

                    <TextBox
                        x:Name="txtBusqueda"
                        Grid.Row="2"
                        Width="580"
                        Height="40"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="White"
                        Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23*" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <ScrollViewer
                            Margin="35,0,35,0"
                            CanContentScroll="False"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ListaArticulos}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Width="150"
                                            Height="195"
                                            Margin="5"
                                            Background="#F1E6D3"
                                            BorderBrush="#2E5E4E"
                                            BorderThickness="1"
                                            Click="ClickProducto">
                                            <Button.Content>
                                                <StackPanel>
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        Background="White"
                                                        FontSize="12"
                                                        Foreground="#000000"
                                                        Text="{Binding PrecioVenta, StringFormat={}$ {0:N2}}"
                                                        TextWrapping="Wrap" />
                                                    <Image
                                                        Width="100"
                                                        Height="100"
                                                        Source="{Binding ImagenProducto}"
                                                        Stretch="UniformToFill" />
                                                    <TextBlock
                                                        Height="55"
                                                        HorizontalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#A01A7D"
                                                        Text="{Binding Descripcion}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Height="45"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="#2E5E4E"
                                                        Text="{Binding Color}"
                                                        TextWrapping="Wrap" />

                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                </Grid>
            </Grid>
        </Border>
        <Border
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="10,0,0,0"
            Padding="15"
            Background="#FFFFFF">

            <Grid>
                <!--  Definir filas  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!--  Título  -->
                    <RowDefinition Height="Auto" />

                    <!--  Subtítulo  -->
                    <RowDefinition Height="*" />
                    <!--  ListView que se expandirá sin salir de la pantalla  -->
                    <RowDefinition Height="Auto" />
                    <!--  Detalles de pago  -->
                    <RowDefinition Height="Auto" />
                    <!--  Botón  -->
                </Grid.RowDefinitions>

                <!--  Título  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#2E5E4E"
                    Text="DETALLES DE LA VENTA" />
                <StackPanel Margin="0,10,0,0">
                    <StackPanel
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Image
                            Width="40"
                            Height="40"
                            Margin="0,0,30,0"
                            Source="/Resources/omegasymbol.png" />

                        <!--  TextBox para la fecha  -->
                        <TextBox
                            x:Name="txtFecha"
                            Height="41"
                            Margin="0,0,10,0"
                            Padding="10"
                            VerticalContentAlignment="Center"
                            md:HintAssist.Hint="Fecha"
                            Background="#F1E6D3"
                            FontWeight="Bold"
                            Foreground="#000"
                            IsEnabled="False"
                            Style="{DynamicResource txtFecha}"
                            TextAlignment="Center" />
                        <!--  Margen derecho para separación  -->

                        <!--  TextBox para la hora  -->
                        <TextBox
                            x:Name="txtHora"
                            Height="41"
                            VerticalContentAlignment="Center"
                            md:HintAssist.Hint="Hora"
                            Background="#F1E6D3"
                            FontWeight="Bold"
                            Foreground="#000"
                            IsEnabled="False"
                            Style="{DynamicResource txtFecha}"
                            TextAlignment="Center" />
                        <Button
                            Grid.Row="3"
                            Margin="20,10,10,10"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            Background="#A01A7D"
                            Click="LimpiarCarrito_Click"
                            Content="🗑"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            ToolTip="Limpiar Carrito" />

                    </StackPanel>




                </StackPanel>
                <!--  Subtítulo  -->
                <StackPanel Grid.Row="1" />
                <!--  Botón de escanear artículo  -->

                <TabControl
                    Grid.Row="2"
                    ItemsSource="{Binding Carritos}"
                    SelectedItem="{Binding CarritoSeleccionado}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nombre}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>

                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <!--  ListView dentro de la fila que se expande  -->
                            <ListView
                                MaxHeight="{Binding PantallaDisponible}"
                                ItemsSource="{Binding Articulos}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="auto"
                                            Height="90"
                                            Margin="0,0,0,0"
                                            Padding="1"
                                            Background="#F5F5F5"
                                            CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Image
                                                    Grid.Column="0"
                                                    Width="60"
                                                    Height="60"
                                                    Margin="2,0,4,0"
                                                    VerticalAlignment="Top"
                                                    Source="{Binding ImagenProducto}" />
                                                <StackPanel Grid.Column="1" Margin="0,0,4,0">
                                                    <TextBlock
                                                        Width="100"
                                                        FontSize="12"
                                                        FontWeight="Bold"
                                                        Foreground="#2E5E4E"
                                                        Text="{Binding Descripcion}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Width="100"
                                                        FontSize="10"
                                                        FontWeight="Bold"
                                                        Foreground="#A01A7D"
                                                        Text="{Binding Color}"
                                                        TextWrapping="Wrap" />
                                                    <TextBox
                                                        x:Name="txtBPrecioVenta"
                                                        FontSize="10"
                                                        Foreground="#6B9D89"
                                                        IsEnabled="False"
                                                        Text="{Binding PrecioVenta, StringFormat=C}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="#8FBBA9"
                                                        Text="{Binding IdCategoria}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="Red"
                                                        MouseDown="TextBlock_MouseDown"
                                                        Text="Descuento disponible"
                                                        Visibility="{Binding AlertaDescuento}" />
                                                </StackPanel>

                                                <TextBlock
                                                    Grid.Column="2"
                                                    Width="80"
                                                    VerticalAlignment="Center"
                                                    Cursor="Hand"
                                                    FontWeight="Bold"
                                                    Foreground="#2E5E4E"
                                                    MouseDown="TextBlock_MouseDown"
                                                    Text="{Binding TotalCarrito, StringFormat=C}" />


                                                <StackPanel
                                                    Grid.Column="3"
                                                    Margin="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">


                                                    <Button
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Margin="10,0,0,10"
                                                        Padding="2,2,2,2"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Background="#A01A7D"
                                                        Click="DecrementarCantidad"
                                                        Content="-"
                                                        FontSize="20"
                                                        Foreground="White" />
                                                    <TextBlock
                                                        Width="20"
                                                        Margin="2,0,0,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#2E5E4E"
                                                        MouseDown="CantidadTextBlock_MouseDown"
                                                        Text="{Binding Cantidad}"
                                                        TextAlignment="Center" />
                                                    <Button
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Margin="5,0,0,10"
                                                        Padding="0,2,2,2"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Background="#A01A7D"
                                                        Click="IncrementarCantidad"
                                                        Content="+"
                                                        FontSize="20"
                                                        Foreground="White"
                                                        IsEnabled="True" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>


                        </DataTemplate>
                    </TabControl.ContentTemplate>



                </TabControl>
                <Popup
                    x:Name="CantidadPopup"
                    AllowsTransparency="True"
                    Placement="MousePoint"
                    PopupAnimation="Fade"
                    StaysOpen="True">
                    <Border
                        Width="250"
                        Height="180"
                        Padding="15"
                        Background="White"
                        BorderBrush="#6B9D89"
                        BorderThickness="2"
                        CornerRadius="10"
                        SnapsToDevicePixels="True">
                        <StackPanel VerticalAlignment="Stretch">
                            <Button
                                HorizontalAlignment="Right"
                                Background="#6B9D89"
                                BorderBrush="Transparent"
                                Click="CerrarPopup_Click"
                                Content="X"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="Black" />

                            <!--  Título  -->
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#2E5E4E"
                                Text="Editar Cantidad" />

                            <TextBox
                                x:Name="PopupCantidadBox"
                                Width="100"
                                Height="35"
                                HorizontalContentAlignment="Center"
                                Background="#D9D9D9"
                                BorderBrush="#6B9D89"
                                BorderThickness="1"
                                FontSize="20"
                                KeyDown="PopupCantidadBox_KeyDown"
                                PreviewTextInput="PopupCantidadBox_PreviewTextInput" />

                            <Button
                                Margin="0,15,0,30"
                                HorizontalAlignment="Center"
                                Background="#6B9D89"
                                BorderBrush="#6B9D89"
                                Click="AceptarCantidad_Click"
                                Content="Aceptar"
                                FontWeight="Bold"
                                Foreground="White" />
                        </StackPanel>
                    </Border>
                </Popup>
                <Popup
                    x:Name="popupEditarPrecio"
                    AllowsTransparency="True"
                    IsOpen="False"
                    Placement="Center"
                    PopupAnimation="Fade"
                    StaysOpen="True">
                    <Border
                        Padding="20"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="10">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontWeight="Bold"
                                Text="Modificar precio total" />
                            <TextBox x:Name="txtNuevoPrecio" Margin="0,0,0,10" />
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,5,0"
                                    Click="CancelarPopup"
                                    Content="Cancelar" />
                                <Button Click="AceptarPopup" Content="Aceptar" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
                <!--  Totales  -->

                <StackPanel Grid.Row="3" Margin="10,5,0,0">


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="19"
                            Foreground="#2E5E4E"
                            Text="Recibí: " />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,5,10,5"
                            Padding="5"
                            HorizontalAlignment="Stretch"
                            Background="White"
                            FontSize="19"
                            Foreground="#2E5E4E"
                            GotFocus="TextBox_GotFocus"
                            KeyDown="txtEnter"
                            Text="{Binding MontoRecibido, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Right" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="17"
                            Foreground="#2E5E4E"
                            Text="Subtotal: " />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,5,10,5"
                            VerticalAlignment="Center"
                            FontSize="19"
                            Foreground="#2E5E4E"
                            Text="{Binding SubTotal, StringFormat=C2}"
                            TextAlignment="Right" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="29"
                            Foreground="#2E5E4E"
                            Text="Total: " />
                        <TextBox
                            x:Name="txtBTotal"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,5,10,5"
                            VerticalAlignment="Center"
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="#A01A7D"
                            GotFocus="TextBox_GotFocus"
                            IsEnabled="{Binding PuedeEditarTotal}"
                            Text="{Binding Total, Mode=TwoWay, UpdateSourceTrigger=LostFocus, Converter={StaticResource CurrencyConverter}}"
                            TextAlignment="Right" />


                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="#2E5E4E"
                            Text="Cambio: " />
                        <TextBlock
                            x:Name="txtCambio"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,5,10,5"
                            VerticalAlignment="Center"
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="#6B9D89"
                            Text="{Binding Cambio, StringFormat=C2}"
                            TextAlignment="Right" />
                    </Grid>
                    <CheckBox
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        Content="Desc. Gral."
                        FontSize="16"
                        FontStyle="Oblique"
                        Foreground="#2E5E4E"
                        IsChecked="{Binding PuedeEditarTotal, Mode=TwoWay}" />
                </StackPanel>

                <Button
                    Grid.Row="4"
                    Height="30"
                    MinWidth="217"
                    Margin="0,13,0,0"
                    Padding="5"
                    HorizontalAlignment="Stretch"
                    Background="#A01A7D"
                    BorderThickness="0"
                    Click="CerrarVenta"
                    Content="CERRAR VENTA"
                    FontFamily="Arial"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White" />

            </Grid>
        </Border>
    </Grid>
</Page>